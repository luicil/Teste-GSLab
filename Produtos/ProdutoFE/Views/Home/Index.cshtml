@{
    ViewData["Title"] = "Produtos";
}

@model IEnumerable<ProdutoModel>;


<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Nome
        </th>
        <th>
            Descrição
        </th>
        <th>
            Valor
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor, "{0:N}")
            </td>

            <td>
                @Html.ActionLink("Editar", "Editar", "Home", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning", @role = "button" })
                @Html.ActionLink("Excluir", "Excluir", "Home", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger", @role = "button", @onclick = "return confirm('Confirma a exclusão do produto ?');" })
            </td>
        </tr>
    }

</table>
